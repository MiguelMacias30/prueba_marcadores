<p id="notice"><%= notice %></p>

<h1>Markers</h1>
<%= pie_chart @markers_type %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Category</th>
      <th>Subcategory</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @markers.each do |marker| %>
      <tr>
        <td><%= marker.name %></td>
        <td><%= marker.url %></td>
        <td><%= marker.subcategory.category.name %></td>
        <td><%= marker.subcategory.name %></td>
        <td><%= marker.type.name %></td>
        <td><%= link_to 'Show', marker %></td>
        <td><%= link_to 'Edit', edit_marker_path(marker) %></td>
        <td><%= link_to 'Destroy', marker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Marker', new_marker_path %>
